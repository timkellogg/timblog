<% provide(:title, @article.title) %>

<h1 class="huge-line-height"><%= @article.title %></h1>
<blockquote><%= (@article.created_at).strftime("%B %-d, %Y at %l:%M %p")%> </blockquote>
<% if current_user.try(:admin) %>
	<div class="row edit-controls-bar">
		<%= link_to 'Edit', edit_article_path(@article), class: "button" %>
		<%= link_to 'Destroy', @article, class: "button alert", :method => :delete, :data => { confirm: 'Are you sure?'} %>
	</div>
<% end %>

<div class="article-body">
	<p><%= @article.body.html_safe %></p>
</div>

<%= link_to image_tag('/images/FaceBookIcon.png'), 'http://www.facebook.com/sharer.php?u='+request.fullpath, :target => :blank %>
